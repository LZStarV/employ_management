{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* 前端特有的配置，覆盖根目录配置 */
    "useDefineForClassFields": true,
    "jsx": "preserve",
    
    /* 前端路径映射 */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "build"],
  "references": [{ "path": "./tsconfig.node.json" }]
}